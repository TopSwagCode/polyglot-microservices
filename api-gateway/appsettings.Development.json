{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "auth": {
        "Destinations": {
          "auth1": { "Address": "http://auth-service:5000/" }
        }
      },
      "tasks": {
        "Destinations": {
          "tasks1": { "Address": "http://task-service:8080/" }
        }
      }
    },
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/api/Auth/{**catch-all}" }
        ]
      },
      "tasks": {
        "ClusterId": "tasks",
        "Match": { "Path": "/tasks/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/tasks/{**catch-all}" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "projects": {
        "ClusterId": "tasks",
        "Match": { "Path": "/projects/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/projects/{**catch-all}" }
        ],
        "AuthorizationPolicy": "authenticated"
      }
    }
  },
  "Jwt": {
    "Issuer": "auth-service-docker",
    "Audience": "polyglot-platform",
    "Key": "docker_supersecretkey_that_is_at_least_32_characters_long"
  }
}
